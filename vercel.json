{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",  
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",  
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",  
      "dest": "/client/build/index.html"
    }
  ],
  "buildCommand": "npm run build",  
  "outputDirectory": "client/build",  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}
